<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Wiz Import Students Wizard Form View  -->
    <record id="wiz_import_students_form_view" model="ir.ui.view">
        <field name="name">wiz.import.students.form</field>
        <field name="model">wiz.import.students</field>
        <field name="arch" type="xml">
            <form string="Import Students Sheet">
                <group col="4">
                    <field name="upload" filename="filename"/>
                    <field name="semester"/>
                    <field name="operation"/>
                    <field name="courses_id"
                           options="{'no_create': True, 'no_open': True}"/>
                    <field name="filename" invisible="1"/>
                </group>
                <group>
                    <h4><u>NOTE</u></h4><br/>
                    <ul style="color: blue;"><li>Please follow the below formate of the .XLSX file</li></ul>
                </group>
                <group>
                    <h4><u>Download Sample File</u></h4><br/>
                    <button string='Sample File' name="re_open_wizard" type="object" width="200px"
                            class="btn-primary fa fa-download" attrs="{'invisible': [('is_download', '=', True)]}"/>
                    <field name="is_download" invisible="1"/>
                    <field name="sample" invisible="1"/>
                    <ul attrs="{'invisible': [('is_download', '=', False)]}"><li><P>Sample File:
                        <field name="sample_file" filename="sample" readonly="1"/>
                    </P></li></ul>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary fa fa-ban"
                            special="cancel"/>
                    <button string='Import'
                            name="read_csv_file"
                            class="btn-primary" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Of Wiz import Students -->
    <record id="action_import_students" model="ir.actions.act_window">
        <field name="name">Import Students</field>
        <field name="res_model">wiz.import.students</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Wiz import Student -->
    <menuitem id="menu_import_students_sheet" name="Import Students"
              parent="admission_register" action="action_import_students"
              sequence="4"/>

</odoo>
