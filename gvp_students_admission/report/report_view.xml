<?xml version="1.0" encoding="utf-8"?>

<odoo>
     <record id="paper_format_report_student_admission" model="report.paperformat">
        <field name="name">Paper Format Report Student Admission</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="True"/>
        <field name="header_spacing">25</field>
        <field name="dpi">80</field>
    </record>

    <report id="report_student_student"
            string="Identity Card"
            model="student.student"
            report_type="qweb-pdf"
            file="gvp_students_admission.identity_card"
            name="gvp_students_admission.identity_card"
            paperformat="gvp_students_admission.paper_format_report_student_admission"
            groups="gvp_students_admission.group_school_administration,gvp_students_admission.group_professor,gvp_students_admission.group_school_student"/>
</odoo>
